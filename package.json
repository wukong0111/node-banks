{
  "name": "banks",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/apps/banks/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:create": "createdb banks_db",
    "db:drop": "dropdb banks_db --if-exists",
    "db:migrate": "tsx src/scripts/migrate.ts up",
    "db:migrate:down": "tsx src/scripts/migrate.ts down",
    "db:migrate:status": "tsx src/scripts/migrate.ts status",
    "db:migrate:reset": "tsx src/scripts/migrate.ts reset",
    "db:seed": "tsx src/scripts/seed.ts run",
    "db:seed:fresh": "tsx src/scripts/seed.ts fresh",
    "db:seed:list": "tsx src/scripts/seed.ts list",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:reset": "npm run db:drop && npm run db:setup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npx biome lint",
    "check:fix": "npx biome lint --write && npm run typecheck"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "dotenv": "^17.2.2",
    "hono": "^4.9.6",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "typescript-language-server": "^4.4.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
